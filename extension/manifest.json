{
  "manifest_version": 3,
  "name": "Beatport Downloader",
  "version": "1.0",
  "description": "Download tracks from Beatport using a native Go application",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.beatport.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "nativeMessaging"
  ],
  "action": {
    "default_popup": "popup.html"
  }
}